{
    "name": "Anti-Phishing Email Extension",
    "description": "An extension to aid email phishing detection",
    "manifest_version": 2,
    "version": "1.0.0",
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts" : ["js/background.js"]
    },
    "content_scripts":[
        {
            "matches": [ "*://mail.google.com/*" ],
            "js": [
                "js/extensionInjector.js"
            ],
            "run_at": "document_start"
        }
    ],

    "browser_action": {
        "default_popup": "Popup.html"
    }
}