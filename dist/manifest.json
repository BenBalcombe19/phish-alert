{
    "name": "Anti-Phishing Email Extension",
    "description": "An extension to aid email phishing detection",
    "manifest_version": 3,
    "version": "1.0.0",
    "permissions": [
        "storage",
        "webRequest",
        "declarativeNetRequest"
    ],
    "background": {
        "service_worker" : "js/background.js"
    },
    "content_scripts":[
        {
            "matches": [ "*://mail.google.com/*" ],
            "js": [
                "js/extensionInjector.js"
            ],
            "run_at": "document_start"
        }
    ],

    "web_accessible_resources": [{
        "resources": [
            "js/gmailJsLoader.js",
            "js/extension.js"
        ],
        "matches": ["<all_urls>"]
    }],
    "host_permissions": [
        "http://*/",
        "https://*/*"
    ],

    "action": {
        "default_popup": "Popup.html"
    }
}